
@{
    ViewData["Title"] = "Cat";
}

<h2 class="jumbotron text-center" style="background-color: mediumpurple">Tails N Scales Cat Room</h2>

<div class="text-center">
    <h3>@UserHelper.GetPlayerName(Context), you have chosen CAT!</h3>

    <div class="text-center col-md-8 container-fluid" style="border: dotted">
        <h4>Great choice. You have two options from here:</h4>

        <a asp-action="CatWithHair" asp-controller="Cats">Long Hair</a><br />

        <a asp-action="CatWithNoHair" asp-controller="Cats">No Hair</a>
    </div><br />
    <div>
        <a asp-action="PickAnAnimal" asp-controller="Home" class="btn btn-sm btn-outline-info text-black-50">Pick a different animal</a>
    </div>

</div>

