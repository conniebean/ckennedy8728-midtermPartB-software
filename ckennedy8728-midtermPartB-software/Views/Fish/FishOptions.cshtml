
@{
    ViewData["Title"] = "Fish Options";
}

<h2 class="jumbotron text-center" style="background-color: cornflowerblue">Tails N Scales Fish Room</h2>

<div class="text-center">
    <h3>@UserHelper.GetPlayerName(Context), you have chosen FISH!</h3>

    <div class="text-center col-md-8 container-fluid" style="border: dotted">
        <h4>Great choice. You have two options from here:</h4>

        <a asp-action="TopFeeder" asp-controller="Fish">Top Feeder</a><br />

        <a asp-action="BottomFeeder" asp-controller="Fish">Bottom Feeder</a>
    </div><br />
    <div>
        <a asp-action="PickAnAnimal" asp-controller="Home" class="btn btn-sm btn-outline-info text-black-50">Pick a different animal</a>
    </div>

</div>
